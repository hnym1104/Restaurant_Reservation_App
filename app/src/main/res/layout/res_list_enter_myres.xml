<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="1"
        android:padding="20dp"
        android:rowCount="5">

        <TextView
            android:id="@+id/resName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:text="식당 이름"
            android:textSize="30dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/resLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:text="위치"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/resKind"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:text="음식 종류"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/resPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_row="3"
            android:layout_column="0"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:text="가격"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/resWho"
            android:text="예약자"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/resHost"
            android:text="식당 주인"
            android:visibility="invisible" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

        <Button
            android:id="@+id/checkResWho"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_row="4"
            android:layout_column="0"
            android:layout_marginRight="20dp"
            android:layout_gravity="center"
            android:backgroundTint="#74B0E1"
            android:text="예약자 확인하기"
            android:textColor="@color/white"
            android:textSize="16dp" />

            <Button
                android:id="@+id/deleteButton"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:layout_row="4"
                android:layout_column="0"
                android:layout_marginLeft="20dp"
                android:layout_gravity="center"
                android:backgroundTint="#74B0E1"
                android:text="식당 삭제하기"
                android:textColor="@color/white"
                android:textSize="16dp" />
        </LinearLayout>

    </GridLayout>

    <View
        android:layout_width="400dp"
        android:layout_height="1dp"
        android:layout_gravity="center"
        android:background="#E95E5C5C" />

</LinearLayout>
