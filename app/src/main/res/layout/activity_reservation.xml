<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:columnCount="1"
    android:padding="20dp"
    android:rowCount="8">

    <TextView
        android:id="@+id/resName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_row="0"
        android:layout_column="0"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:text="식당 이름"
        android:textSize="30dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/resLocation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_row="1"
        android:layout_column="0"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:text="위치"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/resKind"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_row="2"
        android:layout_column="0"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:text="음식 종류"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/resPrice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_row="3"
        android:layout_column="0"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:text="가격"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/resHost"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_row="4"
        android:layout_column="0"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:text="식당 주인"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/resAsk"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_row="5"
        android:layout_column="0"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:paddingTop="30dp"
        android:text="예약하시겠습니까?"
        android:textStyle="bold"
        android:textColor="#3F51B5"
        android:textSize="15dp" />


    <TextView
        android:id="@+id/resWho"
        android:text="예약자"
        android:visibility="invisible" />

    <Button
        android:id="@+id/reservationButton"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_row="6"
        android:layout_column="0"
        android:layout_gravity="center"
        android:backgroundTint="#74B0E1"
        android:text="예약하기" />

    <Button
        android:id="@+id/cancelButton"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_row="7"
        android:layout_column="0"
        android:layout_gravity="center"
        android:backgroundTint="#545555"
        android:text="취소하기" />
</GridLayout>

